<!-- pages/mainpage/mainpage.wxml -->
<view class="main">
    <pageTitle></pageTitle>
    <!-- pagenavi -->
    <view class="nav-wrap">
        <!-- 滚动区域组件 -->
        <scroll-view class="nav" scroll-x="{{true}}">
            <view bindtap="activeNav" data-index="{{index}}" class="nav-item {{ index === currentIndexNav? 'active' : '' }}" wx:for="{{navList}}" wx:key="{{index}}">
                {{item.text}}
            </view>
        </scroll-view>
    </view>
    <!-- swiperList -->
    <view class="slides">
        <swiper autoplay="{{true}}" indicator-dots="{{true}}" circular="{{true}}">
            <swiper-item wx:for="{{swiperList}}" wx:key="{{index}}">
                <navigator>
                    <image src="{{item.imgSrc}}" mode="widthFix"></image>
                </navigator>
            </swiper-item>
        </swiper>
    </view>
    <!-- VIDEO LIST -->
    <view class="video-wrap">
        <navigator class="video-item" wx:for="{{videoList}}" wx:key="{{index}}">
            <view class="video-img">
                <image src="{{item.imgSrc}}"></image>
                <view class="video-info">
                    <view class="play-count"></view>
                    <view class="comment-count"></view>
                </view>
            </view>
            <view class="video-title">{{item.desc}}</view>
        </navigator>
    </view>
</view>